<%= form_for(@note) do |f| %>
  <% if @note.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@note.errors.count, "error") %> prohibited this note from being saved:</h2>

      <ul>
      <% @note.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :kind %><br>
    <%= f.select :kind, [["New", 1], ["Change", 2], ["Fix", 3]], include_blank: true %>
  </div>
  <div class="field">
    <%= f.label :component_id %><br>
    <%= f.select :component_id, Component.all.collect{ |c| [ c.description, c.id ] }, include_blank: true %>
  </div>
  <div class="field">
    <%= f.label :description %><br>
    <%= f.text_field :description %>
  </div>
  <div class="field">
    <%= f.label :wiki %><br>
    <%= f.text_field :wiki %>
  </div>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
