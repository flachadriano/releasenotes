<div class="panel panel-primary">
  <div class="panel-heading"><h1>Listing Sprints</h1></div>

  <br>
  <%= link_to 'New Sprint', new_sprint_path, class: "btn btn-primary" if signed_in? %>
  
  <table class="table">
    <thead>
      <tr>
        <th>Name</th>
        <th>Starts at</th>
        <th>End at</th>
        <th colspan="3"></th>
      </tr>
    </thead>

    <tbody>
      <% @sprints.each do |sprint| %>
        <tr>
          <td><%= sprint.name %></td>
          <td><%= sprint.starts_at %></td>
          <td><%= sprint.end_at %></td>
          <td><%= link_to 'Show', sprint %></td>
          <td><%= link_to 'Edit', edit_sprint_path(sprint) %></td>
          <td><%= link_to 'Destroy', sprint, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>